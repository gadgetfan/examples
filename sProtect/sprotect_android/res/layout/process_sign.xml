<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/signView"
                android:layout_width="150px"
                android:layout_height="150px"/>
        <EditText
                android:id="@+id/signName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/thresholdSignView"
                android:layout_width="150px"
                android:layout_height="150px"/>
        <!--EditText
                android:id="@+id/alikeSignId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/-->
    </LinearLayout>

    <!--EditText
            android:id="@+id/signSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/-->
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="350px"
            android:text="New Text"
            android:id="@+id/data"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <!--EditText
                android:id="@+id/differencePercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/-->

        <Button
                android:id="@+id/saveSign"
                android:text="@string/saveSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/checkSign"
                android:text="@string/checkSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <!--EditText
                android:id="@+id/savedCntId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/-->

    </LinearLayout>
</LinearLayout>

